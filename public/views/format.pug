extends ./layout.pug

block content
  h1 Formats!
  table.table
    thead
      tr
        th Name
        th Team Size
    tbody
      for format in formats
        tr
          td #{format.name}
          td #{format.teamSize}
  button.btn.btn-primary.btn-lg(data-toggle="modal" data-target="#createFormat") Add Format
  #createFormat.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        // Modal Header
        .modal-header
          button.close(type='button', data-dismiss='modal')
            span(aria-hidden='true') Ã—
            span.sr-only Close
          h4#myModalLabel.modal-title
            | Modal title
        // Modal Body
        .modal-body
          form#createForm(role='form', action='/api/format/create', method='post')
            .form-group
              label(for='name') Format Name
              input#name.form-control(type='text', placeholder='Enter name', name='name')
            .form-group
              label(for='teamSize') Team Size
              input#teamSize.form-control(type='number', placeholder='Team Size', name='teamSize')
            //- .checkbox
              label
                input(type='checkbox')
                |  Check me out
            button.btn.btn-default(type='submit') Submit
        // Modal Footer
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal')
            | Close
          button.btn.btn-primary(type='button', onClick='document.getElementById("createForm").submit()')
            | Save changes
